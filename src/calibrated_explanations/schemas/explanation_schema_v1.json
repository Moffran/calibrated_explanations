{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://calibrated-explanations.org/schema/explanation/v1",
  "title": "Calibrated Explanation",
  "type": "object",
  "additionalProperties": true,
  "required": ["task", "index", "explanation_type", "prediction", "rules"],
  "properties": {
    "schema_version": {"type": "string", "const": "1.0.0"},
    "task": {"type": "string"},
    "index": {"type": "integer", "minimum": 0},
    "explanation_type": {"type": "string", "enum": ["factual", "alternative"]},
    "prediction": {"type": "object"},
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["feature", "rule", "rule_weight", "rule_prediction"],
        "properties": {
          "feature": {"type": "integer"},
          "rule": {"type": "string"},
          "rule_weight": {"type": "object"},
          "rule_prediction": {"type": "object"},
          "instance_prediction": {"type": ["object", "null"]},
          "feature_value": {},
          "is_conjunctive": {"type": "boolean"},
          "value_str": {"type": ["string", "null"]},
          "bin_index": {
            "type": ["integer", "null"],
            "description": "Index of the discretization bin (used when creating the explanation) that contains the instanceâ€™s feature value (when available)."
          }
        }
      }
    },
    "provenance": {"type": ["object", "null"]},
    "metadata": {"type": ["object", "null"]}
  }
}
